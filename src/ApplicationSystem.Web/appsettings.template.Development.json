{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=%SERVERNAME%;Database=ApplicationSystem;User ID=%USERNAME%;Password=%PASSWORD%;Integrated Security=False;MultipleActiveResultSets=true;Encrypt=True;TrustServerCertificate=True"
  },
  "AdminAccount": {
    "Email": "%ADMINEMAIL%",
    "Password": "%PASSWORD%"
  },
  "AppSettings": {
    "FrontendOrigin": "%FRONTENDORIGIN%"
  },
  "JwtOptions": {
    "Audience": "%Audience%",
    "SecretKey": "%key%",
    "Issuer": "ApplicationSystem",
    "ExpirationTimeSeconds": 3600,
    "RefreshTokenExpireDays": 15
  },
  "PasswordSettings": {
    "RequiredLength": 4,
    "RequiredUniqueChars": 1,
    "RequireNonAlphanumeric": false,
    "RequireLowercase": false,
    "RequireUppercase": false,
    "RequireDigit": false
  },
  "AttachmentValidation": {
    "NumberOfAllowedAttachments": 10,
    "AllowedFileSizeInMegabytes": 100,
    "AllowedContentTypes": [
      "image/gif",
      "image/jpeg",
      "image/pjpeg",
      "image/png",
      "image/svg+xml",
      "image/tiff",
      "image/vnd.wap.wbmp",
      "image/webp",
      "video/mpeg",
      "video/mp4",
      "video/ogg",
      "video/quicktime",
      "video/webm",
      "video/x-ms-wmv",
      "video/x-flv",
      "video/x-msvideo",
      "video/3gpp",
      "video/3gpp2"
    ]
  }
}
